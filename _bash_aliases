#!/bin/bash

# for utils
alias cdr='while [ ! -d .git ] && [ ! -f go.sum ] && [ ! `pwd` = "/" ] && [ ! `pwd` = ~ ]; do cd ..; done;'
alias vi='nvim'
alias vim='nvim'
alias vsc='code'

alias untar-gz='tar xvfz'
alias untar-bz2='tar xvfj'
alias untar='tar xvf'
alias mysql='mysql --protocol=TCP'

alias tsh-databend='tsh login --proxy=teleport.datafusecloud.com:443 databendcloud'
alias tsh-databendcn='tsh login --proxy=teleport.databend.cn:443 databendcn'

if [ "$KERNEL" = 'Darwin' ]; then
    # brew install coreutils
    alias ls='gls --color -h --group-directories-first --ignore={"*.pyc","__pycache__"}'
    # alias ctags='/usr/local/Cellar/ctags/5.8/bin/ctags'
    alias vsc="open -a 'Visual Studio Code'"
    alias mvim='open -a MacVim'
    alias lsport="netstat -anvp tcp | awk 'NR<3 || /LISTEN/'"
fi
